{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-db",
            "type": "shell",
            "command": "[[ $(docker ps -q -f name=cribe-development-db) ]] || make services-up-dev && sleep 2",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "kill-8080",
            "type": "shell",
            "command": "make kill-port port=8080",
            "presentation": {
                "reveal": "never",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "prepare-debug",
            "dependsOn": ["kill-8080", "start-db"],
            "dependsOrder": "sequence"
        },
    ]
}
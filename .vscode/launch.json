{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/app/main.go",
      "envFile": "${workspaceFolder}/.env.development",
      "env": {
        "DATABASE_URL": "postgres://cribe:cribe@localhost:5432/cribe-dev?sslmode=disable"
      },
      "preLaunchTask": "prepare-debug",
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Attach to Delve",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
    }
  ]
}